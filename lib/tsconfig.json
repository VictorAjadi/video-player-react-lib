{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["DOM", "ES2015"],
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  